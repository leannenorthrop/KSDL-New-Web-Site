<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.londonsamyedzong</groupId>
    <artifactId>parent</artifactId>
    <packaging>pom</packaging>
    <version>1.0.5-SNAPSHOT</version>
    <name>London Samye Dzong Website</name>
   
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <inherited>false</inherited>
                <executions>
                  <execution>
                    <phase>validate</phase>
                    <configuration>
                      <tasks>
                        <untar compression="gzip" src="${user.dir}/maven/wiki.tgz" dest="${basedir}/third-party/maven"/>
                      </tasks>
                    </configuration>
                    <goals>
                      <goal>run</goal>
                    </goals>
                  </execution>
                  <execution>
                    <id>Remove Tmp Dir</id>
                    <phase>clean</phase>
                    <configuration>
                      <tasks>
                        <delete dir="${user.dir}/maven/mylyn"/>
                      </tasks>
                    </configuration>
                    <goals>
                      <goal>run</goal>
                    </goals>
                  </execution>
                </executions>
              </plugin>
              <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <inherited>false</inherited>
                <executions>
                  <execution>
                    <id>Install Wiki Core Jar into Maven Repo</id>
                    <phase>validate</phase>
                    <configuration>
                        <file>${user.dir}/third-party/maven/mylyn/wikitext/core/1.3.0.I20091106-0100-e3x/core-1.3.0.I20091106-0100-e3x.jar</file>
                        <repositoryLayout>default</repositoryLayout>
                        <groupId>org.eclipse.mylyn.wikitext</groupId>
                        <artifactId>core</artifactId>
                        <version>1.3.0.I20091106-0100-e3x</version>
                        <generatePom>true</generatePom>
                        <packaging>jar</packaging>
                    </configuration>
                    <goals>
                      <goal>install-file</goal>
                    </goals>
                  </execution>
                  <execution>
                    <id>Install Wiki Textile Jar into Maven Repo</id>
                    <phase>validate</phase>
                    <configuration>
                        <file>${user.dir}/third-party/maven/mylyn/wikitext/textile/1.3.0.I20091106-0100-e3x/textile-1.3.0.I20091106-0100-e3x.jar</file>
                        <repositoryLayout>default</repositoryLayout>
                        <groupId>org.eclipse.mylyn.wikitext</groupId>
                        <artifactId>textile</artifactId>
                        <version>1.3.0.I20091106-0100-e3x</version>
                        <generatePom>true</generatePom>
                        <packaging>jar</packaging>
                    </configuration>
                    <goals>
                      <goal>install-file</goal>
                    </goals>
                  </execution>
                  <execution>
                    <id>Install Hypersonic DB 1.8.0.7 Jar into Maven Repo</id>
                    <phase>validate</phase>
                    <configuration>
                        <file>${user.dir}/hsqldb/hsqldb-1.8.0.7.jar</file>
                        <repositoryLayout>default</repositoryLayout>
                        <groupId>hsqldb</groupId>
                        <artifactId>hsqldb</artifactId>
                        <version>1.8.0.10</version>
                        <generatePom>true</generatePom>
                        <packaging>jar</packaging>
                    </configuration>
                    <goals>
                      <goal>install-file</goal>
                    </goals>
                  </execution>
                </executions>
              </plugin>
        </plugins>
    </build>
</project>
