<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="northrl" id="test-content-data-01">
        <loadData tableName="publishable" file="${test-dir}/data/PUBLISHABLE.csv">
            <column name="id" type="NUMERIC" header="ID"/>
            <column name="version" type="NUMERIC" header="VERSION"/>
            <column name="display_date" type="BOOLEAN" header="DISPLAY_DATE"/>
            <column name="display_author" type="BOOLEAN" header="DISPLAY_AUTHOR"/>
            <column name="last_updated" type="DATE" header="LAST_UPDATED"/>
            <column name="deleted" type="BOOLEAN" header="DELETED"/>
            <column name="author_id" type="NUMERIC" header="AUTHOR_ID"/>
            <column name="publish_state" type="STRING" header="PUBLISH_STATE"/>
            <column name="date_created" type="DATE" header="DATE_CREATED"/>
            <column name="category" type="STRING" header="CATEGORY"/>
            <column name="date_published" type="DATE" header="DATE_PUBLISHED"/>
        </loadData>
    </changeSet>

    <changeSet author="northrl" id="test-content-data-02">
        <loadData tableName="teacher" file="${test-dir}/data/TEACHER.csv">
            <column name="id" type="NUMERIC" header="ID"/>
            <column name="summary" type="STRING" header="SUMMARY"/>
            <column name="image_id" type="NUMERIC" header="IMAGE_ID"/>
            <column name="content" type="STRING" header="CONTENT"/>
            <column name="name" type="STRING" header="NAME"/>
            <column name="title" type="STRING" header="TITLE"/>
            <column name="category" type="STRING" header="CATEGORY"/>
        </loadData>
    </changeSet>

    <changeSet author="northrl" id="test-content-data-03">
        <loadData tableName="tags" file="${test-dir}/data/TAGS.csv">
            <column name="id" type="NUMERIC" header="ID"/>
            <column name="version" type="NUMERIC" header="VERSION"/>
            <column name="name" type="STRING" header="NAME"/>
        </loadData>
    </changeSet>

    <changeSet author="northrl" id="test-content-data-04">
        <loadData tableName="tag_links" file="${test-dir}/data/TAG_LINKS.csv">
            <column name="id" type="NUMERIC" header="ID"/>
            <column name="version" type="NUMERIC" header="VERSION"/>
            <column name="tag_ref" type="NUMERIC" header="TAG_REF"/>
            <column name="tag_id" type="NUMERIC" header="TAG_ID"/>
            <column name="type" type="STRING" header="TYPE"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
